{
  "name": "@steipete/summarize",
  "version": "0.8.2",
  "description": "Link → clean text → summary.",
  "type": "module",
  "bin": {
    "summarize": "./dist/cli.js",
    "summarizer": "./dist/cli.js"
  },
  "main": "./dist/esm/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js"
    },
    "./content": {
      "types": "./dist/types/content/index.d.ts",
      "import": "./dist/esm/content/index.js"
    },
    "./prompts": {
      "types": "./dist/types/prompts/index.d.ts",
      "import": "./dist/esm/prompts/index.js"
    }
  },
  "files": [
    "dist",
    "docs",
    "CHANGELOG.md",
    "README.md",
    "LICENSE"
  ],
  "packageManager": "pnpm@10.25.0+sha512.5e82639027af37cf832061bcc6d639c219634488e0f2baebe785028a793de7b525ffcd3f7ff574f5e9860654e098fe852ba8ac5dd5cefe1767d23a020a92f501",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "clean": "rm -rf dist packages/core/dist",
    "build": "pnpm clean && pnpm -C packages/core build && pnpm build:lib && pnpm build:cli",
    "build:lib": "tsc -p tsconfig.build.json",
    "build:cli": "node scripts/build-cli.mjs",
    "build:bun": "bun scripts/build-bun.js",
    "build:bun:test": "bun scripts/build-bun.js --test",
    "docs:list": "tsx scripts/docs-list.ts",
    "prepare": "pnpm build",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "summarize": "tsx src/cli.ts",
    "s": "tsx src/cli.ts",
    "format": "biome format --write .",
    "lint": "biome check . && oxlint --type-aware --tsconfig tsconfig.build.json --config .oxlintrc.json .",
    "lint:fix": "biome check --write . && oxlint --type-aware --tsconfig tsconfig.build.json --config .oxlintrc.json --fix .",
    "check": "pnpm lint && pnpm test:coverage",
    "test": "pnpm build && vitest run",
    "test:coverage": "pnpm build && vitest run --coverage",
    "release": "bash scripts/release.sh"
  },
  "pnpm": {
    "overrides": {
      "vite": "7.3.0"
    }
  },
  "dependencies": {
    "@mariozechner/pi-ai": "^0.30.2",
    "@steipete/summarize-core": "workspace:*",
    "commander": "^14.0.2",
    "file-type": "^21.2.0",
    "gpt-tokenizer": "^3.4.0",
    "json5": "^2.2.3",
    "markdansi": "^0.2.0",
    "mime": "^4.1.0",
    "ora": "^9.0.0",
    "osc-progress": "github:steipete/osc-progress#v0.2.0",
    "tokentally": "github:steipete/tokentally#v0.1.0",
    "tslog": "^4.10.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@fal-ai/client": "^1.8.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.3",
    "@types/sanitize-html": "^2.16.0",
    "@vitest/coverage-v8": "^4.0.16",
    "esbuild": "^0.27.2",
    "oxlint": "^1.35.0",
    "oxlint-tsgolint": "^0.10.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
